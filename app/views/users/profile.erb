<div class="top">
	<div class="row">
			<h1>Profile Page </h1>
	</div>
</div>



<section class="module">
	<div class="container">
	  <!-- Trigger the modal with a button -->
	  <a data-toggle="modal" data-target="#myModal" href="#"><h1>What is your question?</h1></a>

	  <!-- Modal -->
	  <div class="modal fade" id="myModal" role="dialog">
	    <div class="modal-dialog">
	    
	      <!-- Modal content-->
	      <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal">&times;</button>
	        </div>
	        <div class="modal-body">
	          <form class="form question" method="post" action="/user_input" role="form">
	          		<input class="form-control input-lg" type="question" name="user_input" placeholder="What would you like to know?"/>
	          </form>
	        </div>
	        <div class="modal-footer">
	          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	          <button class="btn btn-default" type="submit" data-dismiss="modal">Submit</button>
	        </div>
	      </div>
	      
	    </div>
	  </div>
	</div>
</section>

